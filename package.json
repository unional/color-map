{
  "name": "color-map",
  "description": "Color map generator",
  "version": "0.0.0-development",
  "main": "dist-es5/index.js",
  "module": "dist-es2015/index.js",
  "typings": "dist-es5/index.d.ts",
  "files": [
    "dist",
    "dist-es5",
    "dist-es2015",
    "src"
  ],
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "npm run clean && npm run build-es5 && npm run build-es2015",
    "build-es5": "tsc -p tsconfig.es5.json",
    "build-es2015": "tsc -p tsconfig.es2015.json",
    "bundle": "webpack",
    "clean": "rimraf dist dist-es5 dist-es2015",
    "codecov": "codecov",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json 'src/**/*.ts'",
    "prepublishOnly": "npm run build && npm run bundle",
    "test": "npm run clean && tsc && ava",
    "verify": "npm run lint && npm run coverage && npm run build && npm run bundle && npm run dependency-check",
    "watch": "npm run clean && node scripts/watch.js",
    "semantic-release": "semantic-release"
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "homepage": "https://github.com/unional/color-map",
  "bugs": {
    "url": "https://github.com/unional/color-map/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/color-map.git"
  },
  "license": "MIT",
  "ava": {
    "files": [
      "dist-es5/**/*.spec.js"
    ],
    "source": [
      "scripts/*.js",
      "dist-es5/**/*.js",
      "*.json"
    ]
  },
  "nyc": {
    "exclude": [
      "scripts",
      "**/*.spec.*",
      "**/fixtures/**/*"
    ]
  },
  "devDependencies": {
    "aurelia-logging": "^1.4.0",
    "aurelia-logging-color": "^0.5.15",
    "aurelia-polyfills": "^1.3.0",
    "ava": "^0.25.0",
    "browser-env": "^3.2.5",
    "colormap": "^2.3.0",
    "dependency-check": "^3.0.0",
    "eslint": "^4.19.0",
    "eslint-plugin-harmony": "^1.0.3",
    "nyc": "^11.6.0",
    "param-case": "^2.1.1",
    "pascal-case": "^2.0.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.1.3",
    "ts-loader": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-unional": "^0.9.0",
    "typescript": "^2.7.2",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12"
  }
}
