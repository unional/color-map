{
  "name": "color-map",
  "version": "0.0.0-development",
  "description": "Color map generator",
  "homepage": "https://github.com/unional/color-map",
  "bugs": {
    "url": "https://github.com/unional/color-map/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/color-map.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "type": "module",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.js"
  },
  "main": "./cjs/index.js",
  "types": "./esm/index.d.ts",
  "files": [
    "cjs",
    "dist",
    "esm",
    "ts",
    "!ts/**/*.spec.ts"
  ],
  "scripts": {
    "build": "run-p build:cjs build:esm build:tslib bundle",
    "build:cjs": "tsc -p tsconfig.cjs.json && ncp package.cjs.json cjs/package.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:tslib": "tsc -p tsconfig.tslib.json && ncp package.cjs.json tslib/package.json",
    "bundle": "webpack",
    "clean": "rimraf .reports cjs coverage esm lib libm tslib",
    "coverage": "jest --coverage",
    "depcheck": "depcheck",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && rimraf node_modules",
    "prepare": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "size": "size-limit",
    "test": "jest",
    "verify": "npm-run-all -p build depcheck lint coverage -p size",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@repobuddy/jest": "^3.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.4",
    "@semantic-release/npm": "^9.0.1",
    "@size-limit/preset-small-lib": "^8.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "assertron": "^11.0.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.17.0",
    "eslint-plugin-harmony": "^7.1.0",
    "husky": "^8.0.1",
    "jest": "^29.0.0",
    "jest-junit": "^15.0.0",
    "jest-progress-tracker": "^3.0.4",
    "jest-validate": "^29.0.0",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config-2": "^2.1.0",
    "jest-watch-typeahead": "^2.0.0",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "param-case": "^3.0.4",
    "pascal-case": "^3.1.2",
    "pinst": "^3.0.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^20.0.0",
    "size-limit": "^8.0.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.3.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^5.0.0"
  },
  "packageManager": "yarn@3.4.1",
  "size-limit": [
    {
      "path": "./cjs/index.js",
      "limit": "2 KB"
    },
    {
      "path": "./esm/index.js",
      "limit": "2 KB"
    },
    {
      "path": "./tslib/index.js",
      "limit": "5 KB"
    }
  ]
}
