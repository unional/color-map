{
  "name": "color-map",
  "description": "Color map generator",
  "version": "0.5.0",
  "main": "dist/commonjs/index.js",
  "typings": "dist/commonjs/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build-commonjs && npm run build-global",
    "build-commonjs": "tsc -p tsconfig.commonjs.json",
    "build-global": "webpack --config webpack.config.global.js",
    "clean": "rimraf dist",
    "coverage": "npm test && nyc check-coverage --branches 85 --functions 85 --lines 85",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint \"src/**/*.ts\"",
    "postpublish": "git push",
    "prepare": "npm run build",
    "preversion": "git pull && npm run verify",
    "test": "npm run clean && tsc && nyc ava",
    "verify": "npm run lint && npm run coverage && npm run build && npm run dependency-check",
    "watch": "npm run clean && node scripts/watch.js"
  },
  "author": {
    "name": "Homa Wong",
    "email": "homawong@gmail.com"
  },
  "homepage": "https://github.com/unional/color-map",
  "bugs": {
    "url": "https://github.com/unional/color-map/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/color-map.git"
  },
  "license": "MIT",
  "ava": {
    "files": [
      "dist/spec/**/*.spec.js"
    ],
    "source": [
      "scripts/*.js",
      "dist/spec/**/*.js",
      "*.json"
    ]
  },
  "nyc": {
    "exclude": [
      "scripts",
      "**/*.spec.*",
      "**/fixtures/**/*"
    ]
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "browser-env": "^2.0.19",
    "colormap": "^2.2.0",
    "core-js": "^2.4.1",
    "dependency-check": "^2.7.0",
    "eslint": "^3.13.0",
    "eslint-config-unional": "^0.2.3",
    "nyc": "^10.0.0",
    "param-case": "^2.1.0",
    "pascal-case": "^2.0.0",
    "rimraf": "^2.5.4",
    "source-map-loader": "^0.1.6",
    "tslint": "^4.3.1",
    "tslint-config-unional": "^0.6.0",
    "typescript": "^2.1.4",
    "webpack": "^2.2.0-rc.4"
  }
}
